<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- styles -->
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/styles.css">

    <!-- scripts -->
    <script src="/js/loginPage.js" defer></script>
    <script src="/js/passwords.js" defer></script>

    <title>Logg Inn - Baker Jacobsen</title>
</head>
<body>
    <header>
        <!-- navbar -->
        <nav id="nav" class="navFixed">
            <a href="/"><h2 aria-hidden="true" class="title textShadow">Baker Jacobsen</h2></a>
            
            <a class="buttonAnchor" href="/products"><button aria-hidden="true" class="navButton">Produkter</button></a>
    
            <a class="buttonAnchor" href="/login"><button aria-hidden="true" class="navButton">Logg Inn</button></a>
    
            <a class="buttonAnchor" href="/cart"><img class="cartImg" src="/img/cartIcon.png" alt=""><div class="cartNotification">9</div></a>
    
            <label class="searchLabel" for="search">SÃ¸k:</label>
            <input type="text" name="search" id="search">
    
            <p></p>
        </nav>
        <div class="navPlaceholder"></div>
    </header>
    <main class="main">
        <!-- introduction section (title) -->
        <section id="intro" class="loginIntro">
            <h2 class="title textShadow">Logg inn/Registrer</h2>
        </section>
        <!-- main section (login/signup switch button and input) -->
        <section id="loginSection">
            <!-- login switch -->
            <div class="loginRadio">
                <div class="loginRadioDiv">
                    <input type="radio" name="login" id="loginR" class="radios" checked>
                    <label for="loginR">Logg Inn</label>
                </div>
                <div class="loginRadioDiv">
                    <input type="radio" name="login" id="signupR" class="radios">
                    <label for="signupR">Registrer</label>
                </div>
            </div>

            <!-- login form -->
            <form action="/login" method="POST" class="loginForm">
                <div class="formDiv">
                    <label class="loginLineDistance" for="UsernameLogin">Brukernavn:</label>
                    <input class="loginLineDistance" type="text" name="UsernameLogin" id="UsernameLogin" required>

                    <label class="loginLineDistance" for="PasswordLogin">Passord:</label>
                    <input class="loginLineDistance" type="password" name="PasswordLogin" id="PasswordLogin" required>
                </div>
                <button type="submit" class="formBtn">Logg Inn</button>
            </form>
            <!-- signup form -->
            <form action="/login" method="POST" class="signupForm hide">
                <div class="formDiv">
                    <label class="loginLineDistance" for="UsernameSignup">Brukernavn:</label>
                    <input class="loginLineDistance" type="text" name="UsernameSignup" id="UsernameSignup" required>

                    <label class="loginLineDistance" for="EmailSignup">Email:</label>
                    <input class="loginLineDistance" type="email" name="EmailSignup" id="EmailSignup" required>

                    <label class="loginLineDistance" for="PasswordSignup">Passord:</label>
                    <input class="loginLineDistance" type="password" name="PasswordSignup" id="PasswordSignup" required>
                </div>
                <button type="submit" class="formBtn">Registrer</button>
            </form>
            <p class="passWrong passMsg"></p>
        </section>
    </main>
    <%- include("./partials/footer.ejs") %>
</body>
</html>